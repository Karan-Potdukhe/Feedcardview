<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97BAEF"
    tools:context=".MainActivity">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="7dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titletexta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/titletext"
            android:layout_below="@id/titletexta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Description"
            android:textColor="#000"
            />

<ImageView
    android:id="@+id/imgfeed"
    android:layout_below="@+id/titletext"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/download"
    />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgfeed"
        android:layout_marginLeft="20dp"
        app:civ_border_color="#000"
        android:src="@drawable/profile"
        />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile"
            android:layout_below="@id/imgfeed"
            android:text="Tom and Jerry"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/txt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile"
            android:layout_below="@id/txt_name"
            android:text="Cartoon"
            android:textSize="10sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile"
            android:layout_below="@id/txt_subtitle"
            android:text="30 May 2020"
            android:textSize="10sp"
            android:textColor="#000"
            />
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:layout_marginLeft="250dp"
            android:src="@drawable/ic_comment_black_24dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
           android:layout_toRightOf="@id/img_share"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_share_black_24dp"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>